  width 100%
  max-width 450px

.page-heading
  padding-top 2em
  font 3.3rem serif
  font-weight 900
  margin .8em

.post-list
  list-style none

.post-link
  text-decoration none

.post-content
  margin-top 50px
  max-width 450px
  font 1.125rem/1.618 'Helvetica' sans-serif
